#!/bin/bash -e

if [[ -e /etc/redhat-release || -e /etc/system-release ]]
then
    OS=$(rpm -q --whatprovides redhat-release | cut -d"-" -f1)

    case $OS in
	    redhat)
	    	yum -y install mysql-server
            ;;
        centos)
            yum -y install http://dev.mysql.com/get/mysql-community-release-el7-5.noarch.rpm || true
            yum -y install mysql-community-server
            ;;
        system)
            yum -y install mysql-server
            ;;
        fedora)
            yum -y install mysql-community-server
            ;;
    esac
    
else
    export DEBIAN_FRONTEND=noninteractive
    apt-get -q -y update
    apt-get -q -y install -o Dpkg::Options::="--force-confdef" -o Dpkg::Options::="--force-confold" mysql-server
fi

# If SELinux enabled, httpd scripts by default are not allowed to connect out to the network.
if [[ -e "/etc/sysconfig/selinux" && -n "$(sestatus | grep 'enabled')" ]]
then
	yum install policycoreutils-python -y
	setsebool -P httpd_can_network_connect 1
	setsebool -P httpd_can_network_connect_db 1
fi
